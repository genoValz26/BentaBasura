        <activity
            android:name=".Notifications"
            android:label="@string/title_activity_notifications"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".History"
            android:label="@string/title_activity_history"
            android:theme="@style/AppTheme.NoActionBar" />

        <activity android:name=".Cart"
            android:label="@string/title_activity_cart"
            android:theme="@style/AppTheme.NoActionBar" />

        <activity android:name=".Categories"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar" />

        <activity android:name=".Craft_Categories"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar" />

        <activity android:name=".MyProfile_Edit" />
        <activity android:name=".MyItems" />
        <activity android:name=".MyItems_Edit_Craft" />
        <activity android:name=".MyItems_Edit_Trash" />
        <activity android:name=".BuyCraftedDetails"
        android:label="@string/title_activity_buycrafted"
        android:theme="@style/AppTheme.NoActionBar"/>
        <activity android:name=".BuyRawDetails" />
        <activity android:name=".SellerProfile"
            android:theme="@style/AppTheme.NoActionBar"/>

        <service android:name=".FirebaseNotificationService"/>
