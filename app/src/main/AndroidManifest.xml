        android:icon="@drawable/ic_bentabasura_logo"
        android:label="@string/app_name"
        android:roundIcon="@drawable/ic_bentabasura_logo"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".Login">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".Register" />
        <activity
            android:name=".Home"
            android:label="@string/title_activity_home"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".MyProfile"
            android:label="@string/title_activity_profile"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".BuyCrafted"
            android:label="@string/title_activity_buycrafted"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".BuyRaw"
            android:label="@string/title_activity_buyraw"
            android:theme="@style/AppTheme.NoActionBar" />

        <activity
            android:name=".SellCrafted"
            android:label="@string/title_activity_sellcrafted"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".SellRaw"
            android:label="@string/title_activity_sellraw"
