<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:layout_editor_absoluteY="25dp"
    tools:layout_editor_absoluteX="0dp">

    <TextView
        android:id="@+id/txtTrashName"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@color/cardview_shadow_start_color"
        android:text="Trash Name"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toTopOf="@+id/txtTrashDescription"
        app:layout_constraintRight_toRightOf="@+id/txtTrashDescription"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintTop_toTopOf="@+id/imgThumbTrash"
        app:layout_constraintLeft_toRightOf="@+id/imgThumbTrash" />

    <TextView
        android:id="@+id/txtSellerInfo"
        android:layout_width="188dp"
        android:layout_height="22dp"
        android:background="@color/cardview_dark_background"
        android:text="About Seller"
        app:layout_constraintRight_toLeftOf="@+id/btnReadMore"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        app:layout_constraintTop_toTopOf="@+id/btnReadMore" />

    <TextView
        android:id="@+id/txtTrashDescription"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@color/colorPrimaryDark"
        android:text="Trash Description"
        android:layout_marginEnd="8dp"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        android:layout_marginStart="1dp"
        app:layout_constraintBottom_toBottomOf="@+id/txtTrashDate"
        app:layout_constraintRight_toRightOf="@+id/btnReadMore"
        android:layout_marginTop="20dp"
        tools:layout_constraintLeft_creator="1"
        android:layout_marginBottom="20dp"
        app:layout_constraintTop_toTopOf="@+id/imgThumbTrash"
        app:layout_constraintLeft_toRightOf="@+id/imgThumbTrash" />

    <ImageView
        android:id="@+id/imgThumbTrash"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:srcCompat="@drawable/common_google_signin_btn_icon_light"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toBottomOf="@+id/txtTrashDate"
        app:layout_constraintRight_toRightOf="@+id/txtTrashDate"
        android:layout_marginTop="17dp"
        tools:layout_constraintLeft_creator="1"
        android:layout_marginBottom="20dp"
        app:layout_constraintLeft_toLeftOf="@+id/txtTrashDate"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnReadMore"
        android:layout_width="75dp"
        android:layout_height="42dp"
        android:text="More"
        android:textColor="@color/common_google_signin_btn_text_dark_focused"
        android:textSize="10sp"
        tools:layout_constraintTop_creator="1"
        android:layout_marginStart="297dp"
        android:layout_marginTop="122dp"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginLeft="297dp" />

    <TextView
        android:id="@+id/txtTrashDate"
        android:layout_width="0dp"
        android:layout_height="20dp"
        android:background="?attr/colorButtonNormal"
        android:text="Date"
        app:layout_constraintRight_toLeftOf="@+id/txtSellerInfo"
        tools:layout_constraintRight_creator="1"
        android:layout_marginStart="8dp"
        app:layout_constraintBaseline_toBaselineOf="@+id/txtSellerInfo"
        tools:layout_constraintBaseline_creator="1"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="parent" />

</android.support.constraint.ConstraintLayout>
