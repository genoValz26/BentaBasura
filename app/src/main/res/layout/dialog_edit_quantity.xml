<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@layout/dialog_border">

    <EditText
        android:id="@+id/editQty"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:background="@color/colorBackground2"
        android:ems="10"
        android:inputType="phone"
        android:layout_marginTop="22dp"
        android:layout_marginStart="20dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <Button
        android:id="@+id/updateQty"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_alignStart="@+id/editQty"
        android:layout_below="@+id/minusQty"
        android:layout_marginTop="14dp"
        android:background="@layout/button_rounded"
        android:text="Update Quantity"
        android:textSize="12dp" />

    <Button
        android:id="@+id/cancelbtn"
        android:layout_width="110dp"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/updateQty"
        android:layout_alignBottom="@+id/updateQty"
        android:layout_marginStart="15dp"
        android:layout_marginBottom="20dp"
        android:layout_toEndOf="@+id/updateQty"
        android:background="@layout/button_rounded"
        android:text="Cancel"
        android:textSize="12dp" />

    <Button
        android:id="@+id/plusQty"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@layout/button_rounded"
        android:textSize="30dp"
        android:text="+"
        android:layout_alignTop="@+id/editQty"
        android:layout_alignStart="@+id/cancelbtn" />

    <Button
        android:id="@+id/minusQty"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@layout/button_rounded"
        android:textSize="30dp"
        android:text="-"
        android:layout_alignBaseline="@+id/plusQty"
        android:layout_alignBottom="@+id/plusQty"
        android:layout_toEndOf="@+id/plusQty"
        android:layout_marginStart="9dp" />
</RelativeLayout>
