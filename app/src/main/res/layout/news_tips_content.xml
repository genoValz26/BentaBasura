<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:padding="15dp">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/cv"
        android:layout_marginTop="50dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="15dp">

            <TextView
                android:id="@+id/textView31"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="15dp"
                android:layout_marginTop="15dp"
                android:textSize="25sp"
                android:textStyle="bold"
                android:text="News" />

            <TextView
                android:id="@+id/textView32"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/textView31"
                android:layout_below="@+id/textView31"
                android:layout_marginTop="15dp"
                android:textSize="20sp"
                android:textStyle="normal|bold"
                android:text="The Perils of Peanut Butter" />

            <TextView
                android:id="@+id/textView33"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/textView32"
                android:layout_below="@+id/textView32"
                android:layout_marginTop="15dp"
                android:textSize="15sp"
                android:textStyle="normal"
                android:text="A recycling information site maintained by the Resource and Waste Recovery Division of Santa Barbara County, Calif., describes a way to clean a peanut butter jar that uses less energy and water than traditional dishwashing methods." />

            <TextView
                android:id="@+id/textView34"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/textView33"
                android:layout_below="@+id/textView33"
                android:layout_marginTop="30dp"
                android:textSize="25sp"
                android:textStyle="bold"
                android:text="Tips" />

            <ImageView
                android:id="@+id/imageView6"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:layout_marginTop="20dp"
                app:srcCompat="@drawable/recycling_tips"
                android:layout_below="@+id/textView34"
                android:layout_centerHorizontal="true" />


        </RelativeLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>