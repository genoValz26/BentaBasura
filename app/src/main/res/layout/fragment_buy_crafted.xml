<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">
    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:stretchColumns="1">

        <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_vertical_margin"
            tools:context="com.android.bentabasura.benta_basura.BuyCraftedDetails$PlaceholderFragment">

            <TextView
                android:id="@+id/txtCraftName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Crafted Item Name"
                android:textStyle="bold"
                android:textSize="20sp"
                android:layout_alignStart="@+id/imgThumbTrash" />

            <ImageView
                android:id="@+id/imgThumbTrash"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txtCraftName"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                app:srcCompat="@drawable/cat_plastic" />

            <TextView
                android:id="@+id/textView8"
                android:textSize="15sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/imgThumbTrash"
                android:layout_below="@+id/imgThumbTrash"
                android:layout_marginTop="15dp"
                android:textStyle="bold"
                android:text="Description" />

            <TextView
                android:id="@+id/txtCraftDescription"
                android:textSize="10sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/textView8"
                android:layout_below="@+id/textView8"
                android:layout_marginTop="10dp"
                android:text="A synthetic material made from a wide range of organic polymers such as polyethylene, PVC, nylon, etc., that can be molded into shape while soft and then set into a rigid or slightly elastic form." />

            <TextView
                android:id="@+id/txtCraftPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/txtCraftName"
                android:layout_alignEnd="@+id/imgThumbTrash"
                android:textStyle="normal|bold"
                android:textSize="15sp"
                android:text="$1.00" />

            <TextView
                android:id="@+id/textView11"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/txtCraftDescription"
                android:layout_below="@+id/txtCraftDescription"
                android:layout_marginTop="15dp"
                android:textSize="15sp"
                android:textStyle="bold"
                android:text="About Seller" />

            <TextView
                android:id="@+id/textView12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/textView11"
                android:layout_alignBottom="@+id/textView11"
                android:layout_alignParentEnd="true"
                android:textSize="10sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/button2"
                android:layout_width="55dp"
                android:layout_height="25dp"
                android:layout_alignStart="@+id/textView13"
                android:layout_below="@+id/textView11"
                android:background="@color/colorPrimary"
                android:text="Buy" />

            <TextView
                android:id="@+id/textView13"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Quantity"
                android:textSize="15sp"
                android:textStyle="bold"
                android:layout_alignBottom="@+id/textView12"
                android:layout_toStartOf="@+id/txtCraftPrice" />

            <TextView
                android:id="@+id/textView14"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="10sp"
                android:textStyle="normal"
                android:text="Juan Dela Cruz"
                android:layout_below="@+id/textView11"
                android:layout_alignStart="@+id/textView11" />

            <TextView
                android:id="@+id/txtSellerInfo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/textView14"
                android:layout_below="@+id/textView14"
                android:text="09123456789"
                android:textSize="10sp"
                android:textStyle="normal" />

            <TextView
                android:id="@+id/txtCraftQuantity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/textView13"
                android:layout_alignBottom="@+id/textView13"
                android:layout_marginStart="7dp"
                android:layout_toEndOf="@+id/textView13"
                android:text="0" />


        </RelativeLayout>
    </TableLayout>
</ScrollView>