<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:fillViewport="true">
    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:stretchColumns="1">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_vertical_margin">

            <TextView
                android:id="@+id/tipsTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/tv8"
                android:layout_below="@+id/imgThumnbTips"
                android:layout_marginTop="23dp"
                android:text="Crafted Item Name"
                android:textColor="@color/colorPrimaryAccent"
                android:textSize="20sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/imgThumnbTips"
                android:layout_width="fill_parent"
                android:layout_height="200dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                app:srcCompat="@drawable/cat_plastic" />

            <TextView
                android:id="@+id/tv8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/tipsTitle"
                android:layout_marginStart="8dp"
                android:layout_marginTop="51dp"
                android:text="Description"
                android:textColor="@color/colorPrimaryAccent"
                android:textSize="15sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tipsDetail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/tv8"
                android:layout_below="@+id/tv8"
                android:layout_marginTop="10dp"
                android:text="A synthetic material made from a wide range of organic polymers such as polyethylene, PVC, nylon, etc., that can be molded into shape while soft and then set into a rigid or slightly elastic form."
                android:textSize="10sp" />

            <TextView
                android:id="@+id/txtCraftPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/tipsTitle"
                android:layout_below="@+id/tipsTitle"
                android:layout_marginTop="8dp"
                android:text="$1.00"
                android:textColor="@color/colorAccent"
                android:textSize="20sp"
                android:textStyle="normal|bold" />

            <TextView
                android:id="@+id/tv11"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/tipsDetail"
                android:layout_below="@+id/tipsDetail"
                android:layout_marginTop="15dp"
                android:text="Meet-Up:"
                android:textColor="@color/colorPrimaryAccent"
                android:textSize="15sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/tv11"
                android:layout_alignBottom="@+id/tv11"
                android:layout_alignParentEnd="true"
                android:textSize="10sp"
                android:textStyle="bold" />

            <!--<Button
                android:id="@+id/btnEdit"
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:background="@layout/button_rounded"
                android:paddingLeft="10dp"
                android:drawableStart="@drawable/ic_border_color_white_18dp"
                android:text="Edit"
                android:layout_alignTop="@+id/tv11"
                android:layout_alignEnd="@+id/btnInterested" />-->

            <TextView
                android:id="@+id/tv13"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:text="Quantity"
                android:textColor="@color/colorPrimaryAccent"
                android:textSize="15sp"
                android:textStyle="bold"
                android:layout_above="@+id/tipsDetail"
                android:layout_alignStart="@+id/textView5" />

            <TextView
                android:id="@+id/tv14"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/tv11"
                android:layout_below="@+id/tv11"
                android:text=""
                android:textSize="15sp"
                android:textStyle="normal" />

            <TextView
                android:id="@+id/txtSellerInfoCraft"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/tv14"
                android:layout_below="@+id/tv14"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp"
                android:text=""
                android:textSize="15sp"
                android:textStyle="normal" />

            <TextView
                android:id="@+id/txtCraftQuantity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/tv13"
                android:layout_alignBottom="@+id/tv13"
                android:layout_marginStart="12dp"
                android:layout_toEndOf="@+id/tv13"
                android:text="0"
                android:textSize="15sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btnInterested"
                android:layout_width="200dp"
                android:layout_height="40dp"
                android:layout_below="@+id/textView6"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="5dp"
                android:background="@layout/button_rounded"
                android:drawableStart="@drawable/ic_stars_white_18dp"
                android:paddingLeft="5dp"
                android:text="Interested ?" />

            <Button
                android:id="@+id/btnEdit"
                android:layout_width="120dp"
                android:layout_height="40dp"
                android:background="@layout/button_rounded"
                android:drawableStart="@drawable/ic_border_color_white_18dp"
                android:paddingLeft="15dp"
                android:text="EDIT"
                android:layout_alignBaseline="@+id/btnInterested"
                android:layout_alignBottom="@+id/btnInterested"
                android:layout_centerHorizontal="true" />


            <TextView
                android:id="@+id/textView6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txtSellerInfoCraft"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="5dp"
                android:text="Press interested button to view seller's contact."
                android:textSize="10sp" />

            <TextView
                android:id="@+id/textView9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tutorials"
                android:textColor="@color/colorPrimaryAccent"
                android:textSize="15sp"
                android:textStyle="bold"
                android:layout_alignTop="@+id/txtUrl"
                android:layout_toStartOf="@+id/txtCraftQuantity" />

            <TextView
                android:id="@+id/txtUrl"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/tv11"
                android:layout_marginLeft="10dp"
                android:layout_toEndOf="@+id/textView9"
                android:text="Status"
                android:textSize="10sp" />

            <RatingBar
                android:id="@+id/ratingBar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="150dp"
                android:layout_marginTop="245dp"
                android:numStars="3"
                android:scaleX=".5"
                android:scaleY=".5"
                android:stepSize=".5" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rating"
                android:textColor="@color/colorPrimaryAccent"
                android:textSize="15sp"
                android:textStyle="bold"
                android:layout_alignBaseline="@+id/txtCraftPrice"
                android:layout_alignBottom="@+id/txtCraftPrice"
                android:layout_centerHorizontal="true" />

            <TextView
                android:id="@+id/ratingValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/tv13"
                android:layout_below="@+id/textView5"
                android:text="Rating Value" />


        </RelativeLayout>
    </TableLayout>
</ScrollView>