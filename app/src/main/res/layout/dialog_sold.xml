<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@layout/dialog_border">

    <com.toptoche.searchablespinnerlibrary.SearchableSpinner
        android:id="@+id/soldTo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>


    <EditText
        android:id="@+id/quantitySold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/soldTo"
        android:layout_below="@+id/soldTo"
        android:layout_marginTop="21dp"
        android:ems="10"
        android:hint="Quantity Sold"
        android:inputType="phone" />

    <Button
        android:id="@+id/submitSold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="22dp"
        android:text="Submit"
        android:background="@layout/button_rounded"
        android:layout_below="@+id/quantitySold"
        android:layout_alignStart="@+id/quantitySold" />

    <Button
        android:id="@+id/cancelSold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@layout/button_rounded"
        android:layout_alignEnd="@+id/quantitySold"
        android:layout_alignTop="@+id/submitSold"
        android:text="Cancel" />
</RelativeLayout>
