<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_bentabasura2"
    >

    <EditText
        android:id="@+id/txtUser"
        android:layout_width="0dp"
        android:layout_height="47dp"
        android:background="@drawable/bg_username_reg"
        android:paddingLeft="60dp"
        android:ems="10"
        android:hint="@string/username"
        android:inputType="textPersonName"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="41dp"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/txtCPass"
        android:layout_width="0dp"
        android:layout_height="47dp"
        android:layout_marginTop="7dp"
        android:background="@drawable/bg_password_reg"
        android:paddingLeft="60dp"
        android:ems="10"
        android:hint="@string/password"
        android:inputType="textPassword"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintLeft_toLeftOf="@+id/emailtxt"
        app:layout_constraintRight_toRightOf="@+id/emailtxt"
        app:layout_constraintTop_toBottomOf="@+id/emailtxt"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintTop_creator="1" />

    <EditText
        android:id="@+id/txtPass"
        android:layout_width="0dp"
        android:layout_height="47dp"
        android:layout_marginTop="84dp"
        android:background="@drawable/bg_btn"
        android:ems="10"
        android:hint="@string/cpass"
        android:inputType="textPassword"
        app:layout_constraintLeft_toLeftOf="@+id/emailtxt"
        app:layout_constraintRight_toRightOf="@+id/emailtxt"
        app:layout_constraintTop_toBottomOf="@+id/emailtxt"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintTop_creator="1"
        android:layout_marginStart="1dp"
        android:layout_marginEnd="1dp" />

    <EditText
        android:id="@+id/txtFirstName"
        android:layout_width="250dp"
        android:layout_height="30dp"
        android:layout_marginTop="12dp"
        android:background="@drawable/bg_btn"
        android:ems="10"
        android:hint="@string/firstname"
        android:inputType="textPersonName"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="@+id/txtPass"
        app:layout_constraintRight_toRightOf="@+id/txtPass"
        app:layout_constraintTop_toBottomOf="@+id/txtPass"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintTop_creator="1" />

    <EditText
        android:id="@+id/txtLastName"
        android:layout_width="250dp"
        android:layout_height="30dp"
        android:layout_marginTop="14dp"
        android:background="@drawable/bg_btn"
        android:ems="10"
        android:hint="@string/lastname"
        android:inputType="textPersonName"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="@+id/txtFirstName"
        app:layout_constraintRight_toRightOf="@+id/txtFirstName"
        app:layout_constraintTop_toBottomOf="@+id/txtFirstName"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintTop_creator="1" />

    <Button
        android:id="@+id/btnRegister"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_marginBottom="44dp"
        android:background="@drawable/bg_register"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_constraintBottom_creator="1"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintRight_creator="1" />

    <EditText
        android:id="@+id/emailtxt"
        android:layout_width="0dp"
        android:layout_height="47dp"
        android:layout_marginTop="7dp"
        android:background="@drawable/bg_email"
        android:ems="10"
        android:hint="@string/email"
        android:paddingLeft="60dp"
        android:inputType="textEmailAddress"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtUser"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintTop_creator="1"
        app:layout_constraintHorizontal_bias="0.0" />

    <RadioGroup
        android:id="@+id/RadioGroup1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="73dp"
        android:layout_marginTop="10dp"
        android:orientation="vertical"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtLastName"
        tools:layout_constraintLeft_creator="1"
        android:layout_marginStart="73dp">

        <RadioButton
            android:id="@+id/malebtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/male"
            tools:layout_editor_absoluteX="73dp"
            tools:layout_editor_absoluteY="337dp" />

        <RadioButton
            android:id="@+id/femalebtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/female"
            tools:layout_editor_absoluteX="73dp"
            tools:layout_editor_absoluteY="294dp" />
    </RadioGroup>

    <Button
        android:id="@+id/backbtn"
        android:layout_width="30dp"
        android:layout_height="26dp"
        tools:layout_constraintRight_creator="1"
        app:layout_constraintRight_toRightOf="@+id/txtUser"
        android:background="@drawable/bg_back"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="6dp"
        android:layout_marginRight="344dp"
        android:layout_marginEnd="344dp" />

    <ProgressBar
        android:id="@+id/progress_pass"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="407dp"
        android:layout_height="16dp"
        android:progressDrawable="@drawable/progress_bar_password_checker"
        tools:layout_constraintTop_creator="1"
        android:layout_marginTop="2dp"
        app:layout_constraintTop_toBottomOf="@+id/txtCPass"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="@+id/txtCPass" />

    <EditText
        android:id="@+id/txtMobileNum"
        android:layout_width="250dp"
        android:layout_height="30dp"
        android:layout_marginTop="131dp"
        android:background="@drawable/bg_btn"
        android:ems="10"
        android:inputType="phone"
        android:hint="@string/MobileNum"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="@+id/txtFirstName"
        app:layout_constraintRight_toRightOf="@+id/txtFirstName"
        app:layout_constraintTop_toBottomOf="@+id/txtFirstName"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintTop_creator="1" />

    <EditText
        android:id="@+id/txtAddress"
        android:layout_width="250dp"
        android:layout_height="30dp"
        android:ems="10"
        android:background="@drawable/bg_btn"
        android:inputType="textPostalAddress"
        android:hint="@string/Address"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="@+id/txtFirstName"
        app:layout_constraintRight_toRightOf="@+id/txtFirstName"
        app:layout_constraintTop_toBottomOf="@+id/txtFirstName"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintTop_creator="1"
        android:layout_marginTop="176dp" />


</android.support.constraint.ConstraintLayout>
