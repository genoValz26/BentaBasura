<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_bentabasura2"
    tools:layout_editor_absoluteY="25dp"
    tools:layout_editor_absoluteX="0dp">

    <EditText
        android:id="@+id/txtUser"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="7dp"
        android:layout_marginEnd="25dp"
        android:layout_marginStart="25dp"
        android:background="@drawable/user"
        android:ems="10"
        android:hint="@string/fullname"
        android:inputType="textPersonName"
        android:paddingLeft="75dp"
        android:textColor="@color/colorBackground2"
        android:textColorHint="@color/colorBackground2"
        android:textSize="15sp"
        app:layout_constraintBottom_toTopOf="@+id/emailtxt"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnImage"
        app:layout_constraintVertical_bias="1.0"
        tools:layout_constraintBottom_creator="1"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintTop_creator="1"
        android:layout_marginTop="4dp" />

    <EditText
        android:id="@+id/txtCPass"
        android:layout_width="0dp"
        android:layout_height="36dp"
        android:background="@drawable/password"
        android:ems="10"
        android:hint="@string/password"
        android:inputType="textPassword"
        android:paddingLeft="75dp"
        android:textColor="@color/colorBackground2"
        android:textColorHint="@color/colorBackground2"
        android:textSize="15sp"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        android:layout_marginStart="27dp"
        app:layout_constraintBottom_toBottomOf="@+id/RadioGroup1"
        android:layout_marginEnd="27dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="97dp"
        app:layout_constraintTop_toBottomOf="@+id/btnImage"
        tools:layout_constraintLeft_creator="1"
        android:layout_marginBottom="97dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <EditText
        android:id="@+id/txtPass"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:background="@drawable/passwordicon"
        android:paddingLeft="75dp"
        android:textColor="@color/colorBackground2"
        android:textColorHint="@color/colorBackground2"
        android:textSize="15sp"
        android:ems="10"
        android:hint="@string/cpass"
        android:inputType="textPassword"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        app:layout_constraintRight_toRightOf="@+id/txtCPass"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toBottomOf="@+id/txtCPass"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="@+id/txtCPass" />

    <Button
        android:id="@+id/btnRegister"
        android:layout_width="219dp"
        android:layout_height="49dp"
        android:background="@drawable/btn_register"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="19dp"
        app:layout_constraintTop_toBottomOf="@+id/txtAddress"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="parent" />

    <EditText
        android:id="@+id/emailtxt"
        android:layout_width="0dp"
        android:layout_height="39dp"
        android:background="@drawable/email"
        android:paddingLeft="75dp"
        android:textColor="@color/colorBackground2"
        android:textColorHint="@color/colorBackground2"
        android:textSize="15sp"
        android:ems="10"
        android:hint="@string/email"
        android:inputType="textEmailAddress"
        android:layout_marginStart="26dp"
        android:layout_marginEnd="26dp"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toBottomOf="@+id/txtCPass"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="51dp"
        app:layout_constraintTop_toBottomOf="@+id/btnImage"
        tools:layout_constraintLeft_creator="1"
        android:layout_marginBottom="43dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <RadioGroup
        android:id="@+id/RadioGroup1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginStart="44dp"
        android:paddingLeft="75dp"
        android:textSize="15sp"
        android:textColor="@color/colorBackground2"
        android:textColorHint="@color/colorBackground2"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toTopOf="@+id/txtAddress"
        android:layout_marginEnd="43dp"
        app:layout_constraintRight_toRightOf="@+id/btnRegister"
        tools:layout_constraintLeft_creator="1"
        android:layout_marginBottom="57dp"
        app:layout_constraintLeft_toLeftOf="parent">

        <RadioButton
            android:id="@+id/malebtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorBackground2"
            android:text="@string/male"
            tools:layout_editor_absoluteX="73dp"
            tools:layout_editor_absoluteY="337dp" />

        <RadioButton
            android:id="@+id/femalebtn"
            android:layout_width="wrap_content"
            android:textColor="@color/colorBackground2"
            android:layout_height="wrap_content"
            android:text="@string/female"
            tools:layout_editor_absoluteX="73dp"
            tools:layout_editor_absoluteY="294dp" />
    </RadioGroup>

    <Button
        android:id="@+id/backbtn"
        android:layout_width="37dp"
        android:layout_height="34dp"
        android:background="@drawable/bg_back"
        tools:layout_constraintTop_creator="1"
        android:layout_marginStart="16dp"
        android:layout_marginTop="5dp"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginLeft="16dp" />

    <ProgressBar
        android:id="@+id/progress_pass"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="0dp"
        android:layout_height="5dp"
        android:progressDrawable="@drawable/progress_bar_password_checker"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        android:layout_marginStart="26dp"
        android:layout_marginEnd="26dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtCPass"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="parent" />

    <EditText
        android:id="@+id/txtMobileNum"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:textSize="15sp"
        android:paddingLeft="75dp"
        android:textColor="@color/colorBackground2"
        android:textColorHint="@color/colorBackground2"
        android:background="@drawable/androidicon"
        android:ems="10"
        android:inputType="phone"
        android:hint="@string/MobileNum"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toTopOf="@+id/txtAddress"
        android:layout_marginStart="25dp"
        android:layout_marginEnd="25dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="9dp"
        app:layout_constraintTop_toBottomOf="@+id/RadioGroup1"
        tools:layout_constraintLeft_creator="1"
        android:layout_marginBottom="11dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <EditText
        android:id="@+id/txtAddress"
        android:layout_width="0dp"
        android:layout_height="37dp"
        android:textSize="15sp"
        android:paddingLeft="75dp"
        android:textColor="@color/colorBackground2"
        android:textColorHint="@color/colorBackground2"
        android:ems="10"
        android:background="@drawable/location"
        android:inputType="textPostalAddress"
        android:hint="@string/Address"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        android:layout_marginStart="25dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginEnd="25dp"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_constraintLeft_creator="1"
        android:layout_marginBottom="111dp"
        app:layout_constraintLeft_toLeftOf="parent" />


    <ImageButton
        android:id="@+id/btnImage"
        android:layout_width="120dp"
        android:layout_height="105dp"
        android:text=""
        android:background="@drawable/btn_camera"
        android:scaleType="fitXY"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        android:layout_marginStart="18dp"
        android:layout_marginEnd="18dp"
        app:layout_constraintRight_toRightOf="@+id/RadioGroup1"
        android:layout_marginTop="16dp"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/backbtn"
        app:layout_constraintHorizontal_bias="1.0" />


</android.support.constraint.ConstraintLayout>
