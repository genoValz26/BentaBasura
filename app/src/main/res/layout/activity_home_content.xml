<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.android.bentabasura.benta_basura.Home"
    android:background="@color/colorBackground2"
    android:weightSum="1">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay"
        android:id="@+id/appBarLayout2">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/AppTheme.PopupOverlay" />

    </android.support.design.widget.AppBarLayout>
    <ImageView
        android:id="@+id/left_button"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@mipmap/ic_keyboard_arrow_left_black_24dp"
        android:layout_alignTop="@+id/right_button"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ViewFlipper
        android:id="@+id/bckgrndViewFlipper1"
        android:layout_width="245dp"
        android:layout_height="190dp"
        android:layout_below="@+id/appBarLayout2"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center">

        <ImageView
            android:id="@+id/bckgrndImageView7"
            android:layout_width="259dp"
            android:layout_height="192dp"
            android:scaleType="centerInside"
            android:background="@drawable/bg_btn"
            android:src="@drawable/news4" />

        <ImageView
            android:id="@+id/bckgrndImageView6"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:scaleType="centerInside"
            android:background="@drawable/bg_btn"
            android:src="@drawable/news2" />

        <ImageView
            android:id="@+id/bckgrndImageView4"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:scaleType="centerInside"
            android:background="@drawable/bg_btn"
            android:src="@drawable/news3" />

        <ImageView
            android:id="@+id/bckgrndImageView3"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:scaleType="centerInside"
            android:background="@drawable/bg_btn"
            android:src="@drawable/news1" />


    </ViewFlipper>

    <ImageView
        android:id="@+id/right_button"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@mipmap/ic_keyboard_arrow_right_black_24dp"
        android:layout_marginBottom="55dp"
        android:layout_alignBottom="@+id/bckgrndViewFlipper1"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

</RelativeLayout>
