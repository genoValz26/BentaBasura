<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <android.support.design.widget.AppBarLayout
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay"
        android:id="@+id/appBarLayout"
        tools:layout_editor_absoluteY="0dp"
        tools:layout_editor_absoluteX="8dp">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/AppTheme.PopupOverlay" />

    </android.support.design.widget.AppBarLayout>

    <ImageView
        android:id="@+id/profileImageView"
        android:layout_width="200dp"
        android:layout_height="150dp"
        android:layout_marginLeft="13dp"
        android:layout_below="@+id/textView20"
        android:layout_alignParentStart="true" />

    <EditText
        android:id="@+id/editAddress"
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:ems="10"
        android:paddingLeft="75dp"
        android:hint="@string/Address"
        android:inputType="textPersonName"
        android:background="@drawable/location"
        android:layout_marginTop="8dp"
        android:layout_below="@+id/editContact"
        android:layout_alignParentStart="true" />

    <EditText
        android:id="@+id/editContact"
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:ems="10"
        android:paddingLeft="75dp"
        android:hint="@string/MobileNum"
        android:inputType="phone"
        android:background="@drawable/androidicon"
        android:layout_below="@+id/editUsername"
        android:layout_alignParentStart="true"
        android:layout_marginTop="7dp" />

    <EditText
        android:id="@+id/editUsername"
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:layout_marginTop="8dp"
        android:ems="10"
        android:paddingLeft="75dp"
        android:hint="@string/username"
        android:background="@drawable/user"
        android:inputType="textPersonName"
        android:layout_below="@+id/textView19"
        android:layout_alignParentStart="true" />

    <Button
        android:id="@+id/takephotobtn"
        android:layout_width="120dp"
        android:layout_height="50dp"
        android:text="@string/takephoto"
        android:layout_below="@+id/gallerybtn"
        android:layout_toEndOf="@+id/profileImageView" />

    <EditText
        android:id="@+id/editfname"
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:ems="10"
        android:paddingLeft="75dp"
        android:hint="@string/firstname"
        android:inputType="textPersonName"
        android:background="@drawable/firstnameicon"
        android:layout_marginTop="8dp"
        android:layout_below="@+id/editAddress"
        android:layout_alignParentStart="true" />

    <EditText
        android:id="@+id/editlname"
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:ems="10"
        android:paddingLeft="75dp"
        android:background="@drawable/lastname"
        android:hint="@string/lastname"
        android:inputType="textPersonName"
        android:layout_marginTop="8dp"
        android:layout_below="@+id/editfname"
        android:layout_alignParentStart="true" />

    <Button
        android:id="@+id/gallerybtn"
        android:layout_width="120dp"
        android:layout_height="50dp"
        android:text="@string/upload"
        android:layout_alignTop="@+id/profileImageView"
        android:layout_toEndOf="@+id/profileImageView" />

    <Button
        android:id="@+id/updatebtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:text="@string/updateBtn"
        android:layout_below="@+id/editlname"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="19dp" />

    <TextView
        android:id="@+id/textView19"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Update Information"
        android:textSize="20dp"
        android:layout_below="@+id/profileImageView"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/textView20"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:text="Update Profile Picture"
        android:layout_below="@+id/appBarLayout"
        android:layout_alignParentStart="true" />

    <Button
        android:id="@+id/savebtn"
        android:layout_width="120dp"
        android:layout_height="50dp"
        android:layout_below="@+id/takephotobtn"
        android:layout_toEndOf="@+id/profileImageView"
        android:text="Save" />
</RelativeLayout>
