<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.android.bentabasura.benta_basura.SellCrafted"
    android:background="@color/colorBackground"
    android:orientation="vertical">

    <android.support.design.widget.AppBarLayout
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay"
        android:id="@+id/appBarLayout"
        tools:layout_editor_absoluteY="0dp"
        tools:layout_editor_absoluteX="8dp">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/AppTheme.PopupOverlay" />

    </android.support.design.widget.AppBarLayout>

    <ImageView
        android:id="@+id/UploadImageView"
        android:layout_width="140dp"
        android:layout_height="150dp"
        android:layout_below="@+id/appBarLayout"
        android:layout_centerHorizontal="true"
        app:srcCompat="@drawable/common_google_signin_btn_icon_dark_focused"
        tools:layout_editor_absoluteX="132dp"
        tools:layout_editor_absoluteY="56dp" />

    <Button
        android:id="@+id/uploadbtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/upload"
        android:background="@drawable/bg_btn"
        android:layout_alignBottom="@+id/UploadImageView"
        android:layout_toRightOf="@+id/UploadImageView"
        android:layout_toEndOf="@+id/UploadImageView"
        tools:layout_editor_absoluteY="56dp"
        tools:layout_editor_absoluteX="252dp" />

    <Button
        android:id="@+id/takePhotobtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_btn"
        android:text="@string/takephoto"
        android:layout_alignBaseline="@+id/uploadbtn"
        android:layout_alignBottom="@+id/uploadbtn"
        android:layout_toLeftOf="@+id/UploadImageView"
        android:layout_toStartOf="@+id/UploadImageView"
        tools:layout_editor_absoluteY="56dp"
        tools:layout_editor_absoluteX="16dp" />

    <EditText
        android:id="@+id/craftName"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:ems="10"
        android:background="@drawable/bg_fillup"
        android:paddingLeft="55dp"
        android:inputType="textPersonName"
        android:hint="@string/craftName"
        android:layout_below="@+id/UploadImageView"
        android:layout_centerHorizontal="true"
        tools:layout_editor_absoluteY="156dp"
        tools:layout_editor_absoluteX="63dp" />

    <EditText
        android:id="@+id/craftQty"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:ems="10"
        android:inputType="number"
        android:hint="@string/craftQuantity"
        android:background="@drawable/bg_fillup"
        android:paddingLeft="55dp"
        android:layout_below="@+id/craftName"
        android:layout_alignLeft="@+id/craftName"
        android:layout_alignStart="@+id/craftName"
        tools:layout_editor_absoluteY="224dp"
        tools:layout_editor_absoluteX="63dp" />

    <EditText
        android:id="@+id/craftDesc"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:ems="10"
        android:inputType="textMultiLine"
        android:background="@drawable/bg_fillup"
        android:paddingLeft="55dp"
        android:hint="@string/craftDesc"
        android:layout_below="@+id/craftQty"
        android:layout_alignLeft="@+id/craftQty"
        android:layout_alignStart="@+id/craftQty"
        tools:layout_editor_absoluteY="292dp"
        tools:layout_editor_absoluteX="63dp" />

    <EditText
        android:id="@+id/craftPrice"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:ems="10"
        android:hint="@string/craftPrice"
        android:inputType="number"
        android:background="@drawable/bg_fillup"
        android:paddingLeft="55dp"
        android:layout_below="@+id/craftDesc"
        android:layout_alignLeft="@+id/craftDesc"
        android:layout_alignStart="@+id/craftDesc"
        tools:layout_editor_absoluteY="360dp"
        tools:layout_editor_absoluteX="63dp" />

    <Button
        android:id="@+id/SubmitCraft"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_btn"
        android:text="@string/Submit"
        tools:layout_editor_absoluteY="497dp"
        tools:layout_editor_absoluteX="134dp"
        android:layout_marginTop="50dp"
        android:layout_below="@+id/sellerContact"
        android:layout_centerHorizontal="true" />

    <EditText
        android:id="@+id/craftCategory"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_below="@+id/craftPrice"
        android:layout_centerHorizontal="true"
        android:ems="10"
        android:background="@drawable/bg_fillup"
        android:paddingLeft="55dp"
        android:inputType="textPersonName"
        android:hint="@string/craftCategory"
        tools:layout_editor_absoluteY="428dp"
        tools:layout_editor_absoluteX="63dp" />

    <EditText
        android:id="@+id/sellerContact"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_alignEnd="@+id/craftCategory"
        android:layout_alignRight="@+id/craftCategory"
        android:layout_below="@+id/craftCategory"
        android:ems="10"
        android:hint="@string/sellerContact"
        android:background="@drawable/bg_fillup"
        android:paddingLeft="55dp"
        android:inputType="textMultiLine"
        tools:layout_editor_absoluteY="428dp"
        tools:layout_editor_absoluteX="63dp" />

    <EditText
        android:id="@+id/resourcesFrom"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:ems="10"
        android:background="@drawable/bg_fillup"
        android:paddingLeft="55dp"
        android:inputType="textPersonName"
        android:hint="@string/resourcesFrom"
        android:layout_below="@+id/sellerContact"
        android:layout_alignLeft="@+id/sellerContact"
        android:layout_alignStart="@+id/sellerContact" />

</RelativeLayout>
